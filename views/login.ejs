<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Doc-Fluent</title>
    <link rel="icon" type="image/png" sizes="32x32" href="images/favicon-32x32.png">
    <link rel="stylesheet" href="./mvp.css" />
    <!-- <link rel="stylesheet" href="frontpage.css"> -->
    <link rel="stylesheet" href="style.css">


</head>

<body>
    <div class="wrapper">
        <!-- <img src="/images/docfluent.png"> -->

        <main>
            <section>
                <form id="login">
                    <div class="login-form" style="text-align: center;">
                        <h2>Login</h2>
                        <hr>
                        <label>Email</label>
                        <input type="text" name="login" class="input-center" placeholder="you@gmail.com" /><br>
                        <label>Password</label>
                        <input type="password" name="password" class="input-center" placeholder="Password" /><br>
                        <button style="background-color: #0c610f;">Log in</button>
                    </div>
                </form>
            </section>
        </main>


    </div>
    <div class="box">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>
</body>
<script src="https://www.gstatic.com/firebasejs/7.14.1/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/7.14.1/firebase-auth.js"></script>
<script src="https://www.gstatic.com/firebasejs/7.14.1/firebase-database.js"></script>

<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
<script src="firebase_config.js"></script>
<script type="module">
    window.addEventListener("DOMContentLoaded", () => {


        firebase.initializeApp(firebaseConfig);

        firebase.auth().setPersistence(firebase.auth.Auth.Persistence.NONE);

        document
            .getElementById("login")
            .addEventListener("submit", (event) => {
                event.preventDefault();
                const login = event.target.login.value;
                const password = event.target.password.value;


                firebase
                    .auth()
                    .signInWithEmailAndPassword(login, password)
                    .then(({ user }) => {

                        var ref = firebase.database().ref()
                        var em = login.replaceAll(".com", '')
                        ref.child('users/').once("value").then(snap => {
                            let s = snap.val();
                            if (s[em] != null) {
                                var username = s[em]["name"];
                                fetch("/sessionLogin", {
                                    method: "POST",
                                    headers: {
                                        Accept: "application/json",
                                        "Content-Type": "application/json",
                                    },
                                    body: JSON.stringify({ username: username, email: login }),
                                }).then(response => {
                                    response.json().then(data => {
                                        window.location.assign('/dashboard')

                                    })


                                }).catch(err => {
                                    console.log(err)
                                });

                            }
                        })

                    })
                return false;
            });
    });
</script>


</html>