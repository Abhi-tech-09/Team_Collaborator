<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doc-Fluent</title>
    <!-- for css -->
    <link rel="stylesheet" href="mvp.css">
    <link rel="stylesheet" href="style.css">
    <!-- fonts for content -->
    <link
        href="https://fonts.googleapis.com/css2?family=Kaisei+HarunoUmi:wght@500&family=Source+Sans+Pro:ital,wght@1,300&display=swap"
        rel="styles.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script defer src="http://localhost:3000/socket.io/socket.io.js"></script>
    <script defer src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        let user = "<%= current_user %>";
    </script>

</head>

<body>
    <div class="wrapper">
        <img src="/images/docfluent.png">
        <div class="box">

        </div>
    </div>

    <div class="auth">
        <a href="/profile">profile</a>
        <a href="/sessionLogout">Log out</a>

    </div>

    <div id="roomContainer">
        <% Object.keys(rooms).forEach(room=> { %>
            <div class="roomList">
                <span class="badge bg-warning text-dark">
                    <%= room %>
                </span>
                <a class="btn btn-sm btn-primary" href="/<%= room %>" role="button">Join</a>
            </div>

            <% }) %>
    </div>

    <br>

    <div class="elements">
        <form id="createRoom" autocomplete="off" action="/room" method="post">
            <div class="row">
                <div class="col">
                    <input type="text" name="room" class="form-control" placeholder="Enter room name" , required>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Create Room</button>
                </div>
            </div>
        </form>
    </div>

    <script>

        window.addEventListener("DOMContentLoaded", () => {
            document.getElementById('createRoom').addEventListener("submit", (e) => {
                e.preventDefault();
                user = user.replaceAll("&#34;", '"')
                user = JSON.parse(user)
                idToken = user.stsTokenManager.accessToken;
                // user = user
                return fetch("/sessionLogin", {
                    method: "POST",
                    headers: {
                        Accept: "application/json",
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ idToken }),
                }).then((res) => {
                    console.log(res)
                })
            })


        });

    </script>

</body>



</html>